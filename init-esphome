        "-c",
        "if [[ \"${file}\" != *.yaml ]]; then echo \"Error: Configuration .yaml file must be open and focused in the editor.\" >&2; exit 1; fi && source ./venv/bin/activate && echo '1' | esphome run ${file} && deactivate"
      ],
